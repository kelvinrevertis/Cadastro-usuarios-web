generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  name     String
  email    String  @unique
  cpf      String  @unique
  pis      String? @unique
  password String

  userAdresses Address[]
}

model Address {
  id         String  @id @default(cuid())
  country    String
  state      String
  city       String
  cep        String
  street     String
  number     String
  complement String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}
